@model IEnumerable<AssignmentTask.Application.ViewModels.AssignmentViewModel>

@{
    ViewData["Title"] = "ViewAssignments";
}

<h1>View Assignments</h1>
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FileName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student.Email)
            </th>
            <th>
               Task
            </th>
            <th scope="col">Student's Assignment</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FileName)
            </td>
            <td>
                @{ var description = System.Net.WebUtility.HtmlDecode(item.Description);}
                <span>@description</span>
            </td>>
            <td>
                @Html.DisplayFor(modelItem => item.Student.Email)
            </td>
            <td>
                @ViewBag.task.TaskName
            </td>
            <td>
                
               <a href="/Assignments/StudentAssignment?id=@item.Id" class="btn btn-outline-info">View</a>
            </td>
        </tr>
}
    </tbody>
</table>
