@model AssignmentTask.Application.ViewModels.CommentViewModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Add a Comment</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CommentArea" class="control-label"></label>
                <input asp-for="CommentArea" class="form-control" style="height:200px;width:500px;">
                <span asp-validation-for="CommentArea" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-outline-success" />
            </div>
        </form>
    </div>
</div>
