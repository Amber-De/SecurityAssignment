@model IEnumerable<AssignmentTask.Application.ViewModels.CommentViewModel>
@{
    ViewData["Title"] = "List";
}

<h1>Comments List</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Comment
            </th>
            <th>
                Student
            </th>
            <th>
                Teacher
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @{ var comment = System.Net.WebUtility.HtmlDecode(item.CommentArea);}
                <span>@comment</span>
            </td>
            <td>
                @ViewBag.student.Name @ViewBag.student.Surname
            </td>
            <td>
                @ViewBag.teacher.Email
            </td>
        </tr>
          
        }
    </tbody>
</table>
